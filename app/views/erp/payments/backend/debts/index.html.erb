<% content_for :title do %>
    <%= t('.debts') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-life-ring"></i> <%= t('.debts') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_payments.new_backend_debt_path(order_id: Erp::Orders::Order.first),
        class: 'btn-sm'
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_payments.list_backend_debts_path,
    keywords: [
        {
            text: t('.note'), name: 'erp_payments_debts.note'
        },
        {
            text: t('creator'),
            name: 'erp_users.name',
            select: {
                name: 'erp_users.id',
                data_url: erp.dataselect_backend_users_path
            }
        }
    ],
    actions: [
        {
            text: '<i class="fa fa-eye-slash"></i> '+t('archive'),
            url: erp_payments.archive_all_backend_debts_path,
            data_method: 'PUT'
        },
        {
            text: '<i class="fa fa-eye"></i> '+t('unarchive'),
            url: erp_payments.unarchive_all_backend_debts_path,
            data_method: 'PUT'
        },
        {
            divider: true
        },
        {
            text: '<i class="fa fa-trash"></i> '+t('.delete'),
            url: erp_payments.delete_all_backend_debts_path,
            data_method: 'DELETE',
            data_confirm: t('delete_confirm')
        }
    ],
    filters: [
        {
            text: t('.debt_archived'), name: 'show_archived', value: true, checked: false
        }
    ],
    columns: [
        {
            text: t('.order'), name: 'order', value: true, checked: true
        },
        {
            text: t('.deadline'), name: 'deadline', value: true, checked: true
        },
        {
            text: t('.note'), name: 'note', value: true, checked: true
        },
        {
            text: t('status'), name: 'status', value: true, checked: true
        },
        {
            text: t('creator'), name: 'creator', value: true, checked: false
        },
        {
            text: t('created_at'), name: 'created_at', value: true, checked: true
        }
    ],
    sort: { sort_by: 'erp_payments_debts.created_at', sort_direction: 'desc' }
) %>