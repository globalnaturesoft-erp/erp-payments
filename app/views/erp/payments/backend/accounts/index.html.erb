<% content_for :title do %>
    <%= t('.accounts') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-bank"></i> <%= t('.accounts') %>
<% end %>

<% content_for :page_toolbar do %>
    <% if Erp::Core.available?("ortho_k") %>
        <%= erp_component('button/create', {
            text: t('.create'),
            href: erp_payments.new_backend_account_path,
            class: 'btn-sm'
        }) if can? :accounting_payments_accounts_create, nil %>
    <% else %>
        <%= erp_component('button/create', {
            text: t('.create'),
            href: erp_payments.new_backend_account_path,
            class: 'btn-sm'
        }) %>
    <% end %>
<% end %>

<% content_for :global_filter do %>
    <div class="row top-datalist">
        <div class="col-md-3">
            <%= erp_form_control('date', {
                label: t('.from_date'),
                name: 'from_date',
                value: @from_date,
                placeholder: t('.select_from_date')
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control('date', {
                label: t('.to_date'),
                name: 'to_date',
                value: @to_date,
                placeholder: t('.select_to_date')
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'period',
                label: t('.filter_period'),
                placeholder: t('.choose_period'),
                url: erp_periods.dataselect_backend_periods_path(format: 'json'),
            }) %>
        </div>
    </div>
<% end %>

<%= erp_datalist(
    url: erp_payments.list_backend_accounts_path,
    keywords: [
        {
            text: t('.name'), name: 'erp_payments_accounts.name'
        },
        {
            text: t('.owner'), name: 'erp_payments_accounts.owner'
        },
        {
            text: t('creator'),
            name: 'erp_users.name',
            select: {
                name: 'erp_users.id',
                data_url: erp.dataselect_backend_users_path
            }
        }
    ],
    filters: [
        {
            text: t('.active'), name: 'status', value: Erp::Payments::Account::STATUS_ACTIVE, checked: true
        },
        {
            text: t('.deleted'), name: 'status', value: Erp::Payments::Account::STATUS_DELETED, checked: false
        }
    ],
    columns: [
        {
            text: t('.name'), name: 'name', value: true, checked: true
        },
        {
            text: t('.account_number'), name: 'account_number', value: true, checked: false
        },
        {
            text: t('.owner'), name: 'owner', value: true, checked: true
        },
        {
            text: t('.beginning_balance'), name: 'beginning_balance', value: true, checked: true
        },
        {
            text: t('.received_amount_in_period'), name: 'received_amount_in_period', value: true, checked: true
        },
        {
            text: t('.paid_amount_in_period'), name: 'paid_amount_in_period', value: true, checked: true
        },
        {
            text: t('.ending_balance'), name: 'ending_balance', value: true, checked: true
        },
        {
            text: t('.payment_method'), name: 'payment_method', value: true, checked: false
        },
        {
            text: t('status'), name: 'status', value: true, checked: true
        },
        {
            text: t('creator'), name: 'creator', value: true, checked: false
        },
        {
            text: t('created_at'), name: 'created_at', value: true, checked: false
        }
    ],
    sort: { sort_by: 'erp_payments_accounts.created_at', sort_direction: 'desc' }
) %>
