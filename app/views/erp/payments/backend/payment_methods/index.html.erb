<% content_for :title do %>
    <%= t('.payment_methods') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-file-text-o"></i> <%= t('.payment_methods') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_payments.new_backend_payment_method_path,
        class: 'btn-sm'
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_payments.list_backend_payment_methods_path,
    keywords: [
        {
            text: t('.name'), name: 'erp_payments_payment_methods.name'
        }
    ],
    actions: [
        {
            text: '<i class="fa fa-eye-slash"></i> '+t('archive'),
            url: erp_payments.archive_all_backend_payment_methods_path,
            data_method: 'PUT'
        },
        {
            text: '<i class="fa fa-eye"></i> '+t('unarchive'),
            url: erp_payments.unarchive_all_backend_payment_methods_path,
            data_method: 'PUT'
        },
        {
            divider: true
        },
        {
            text: '<i class="fa fa-trash"></i> '+t('.delete'),
            url: erp_payments.delete_all_backend_payment_methods_path,
            data_method: 'DELETE',
            data_confirm: t('delete_confirm')
        }
    ],
    filters: [
        {
            text: t('.payment_method_archived'), name: 'show_archived', value: true, checked: false
        },
    ],
    columns: [
        {
            text: t('.name'), name: 'name', value: true, checked: true
        },
        {
            text: t('.type_method'), name: 'type_method', value: true, checked: true
        },
        {
            text: t('.is_default'), name: 'is_default', value: true, checked: true
        },
        {
            text: t('status'), name: 'status', value: true, checked: true
        },
        {
            text: t('creator'), name: 'creator', value: true, checked: false
        },
        {
            text: t('created_at'), name: 'created_at', value: true, checked: true
        }
    ],
    sort: { sort_by: 'erp_payments_payment_methods.created_at', sort_direction: 'desc' }
) %>