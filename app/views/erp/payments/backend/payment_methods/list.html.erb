<table class="table table-advance table-hover table-striped table-checkable order-column">
    <thead>
        <tr>
            <th width='1%'>
                <%= erp_datalist_check_all %>
            </th>
            <% if get_columns(params).include?("name") %>
                <th class="sortable" sort-by='erp_payments_payment_methods.name'>
                    <%= t('.name') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("type_method") %>
                <th>
                    <%= t('.type_method') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("is_default") %>
                <th>
                    <%= t('.is_default') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("status") %>
                <th>
                    <%= t('status') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("creator") %>
                <th>
                    <%= t('creator') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("created_at") %>
                <th class="sortable" sort-by='erp_payments_payment_methods.created_at'>
                    <%= t('created_at') %>
                </th>
            <% end %>
            <th width="7%"><%= t('actions') %></th>
        </tr>
    </thead>
    <tbody>
        <% if @payment_methods.each do |payment_method| %>
            <tr class="odd gradeX">
                <td>
                    <%= erp_datalist_check_row(id: payment_method.id) %>
                </td>
                <% if get_columns(params).include?("name") %>
                    <td><%= link_to payment_method.name, erp_payments.edit_backend_payment_method_path(payment_method) %></td>
                <% end %>
                <% if get_columns(params).include?("type_method") %>
                    <td><%= t(payment_method.type_method) %></td>
                <% end %>
                <% if get_columns(params).include?("is_default") %>
                    <td><% if payment_method.is_default == true %><i class="fa fa-check"></i><% end %></td>
                <% end %>
                <% if get_columns(params).include?("status") %>
                <td>
                    <% if payment_method.archived == true %>
                    <span class="label label-sm label-danger"><%= t('archived') %></span>
                    <% else %>
                    <span class="label label-sm label-success"><%= t('active') %></span>
                    <% end %> 
                </td>
                <% end %>
                <% if get_columns(params).include?("creator") %>
                    <td></td>
                <% end %>
                <% if get_columns(params).include?("created_at") %>
                    <td><%= payment_method.created_at.strftime("%d/%m/%Y") %></td>
                <% end %>
                <td>
                    <%= erp_datalist_row_actions(
                        [
                            {
                                text: '<i class="fa fa-edit"></i> '+t('edit'),
                                href: erp_payments.edit_backend_payment_method_path(payment_method)
                            },
                            {
                                text: '<i class="fa fa-eye-slash"></i> '+t('archive'),
                                url: erp_payments.archive_backend_payment_methods_path(id: payment_method),
                                data_method: 'PUT',
                                hide: payment_method.archived,
                                class: 'ajax-link'
                            },
                            {
                                text: '<i class="fa fa-eye"></i> '+t('unarchive'),
                                url: erp_payments.unarchive_backend_payment_methods_path(id: payment_method),
                                data_method: 'PUT',
                                hide: !payment_method.archived,
                                class: 'ajax-link'
                            },
                            {
                                divider: true
                            },
                            {
                                text: '<i class="fa fa-trash"></i> '+t('.delete'),
                                url: erp_payments.backend_payment_method_path(payment_method),
                                data_method: 'DELETE',
                                class: 'ajax-link',
                                data_confirm: t('delete_confirm')
                            }
                        ]
                    ) %>
                </td>
            </tr>
        <% end.empty? %>
            <tr>
                <td colspan="7"><%= t('.no_matching_records_found') %></td>
            </tr>
        <% end %>
    </tbody>
</table>
        
<%= erp_datalist_pagination(@payment_methods) %>