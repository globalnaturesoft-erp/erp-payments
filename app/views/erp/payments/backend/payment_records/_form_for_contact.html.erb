<%= form_for([erp_payments, :backend, payment_record]) do |f| %>
    <div class="form-body">
        <div class="row">
            <div class="col-md-12">
                <div class="portlet light bordered">
                    <div class="portlet-body form">
                        <div class="row">
                            <div class="col-md-6">
                                <% if Erp::Core.available?("contacts") %>
                                    <%= erp_form_control("dataselect", {
                                        name: 'payment_record[contact_id]',
                                        value: payment_record.contact_id,
                                        text: payment_record.contact_name,
                                        placeholder: t('.choose_contact'),
                                        help: t('.help_contact'),
                                        label: t('.contact'),
                                        url: erp_contacts.dataselect_backend_contacts_path(format: 'json'),
                                        required: true,
                                        errors: payment_record.errors.full_messages_for(:contact_id)
                                    }) %>
                                <% end %>
                            </div>
                            <div class="col-md-6">
                                <div class="ajax-box"
                                    data-url="<%= erp_payments.ajax_info_form_for_contact_backend_payment_records_path %>"
                                    data-control="[name='payment_record[contact_id]']">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <%= render 'form_genaral', payment_record: payment_record %>
            </div>
        </div>
    </div>
    <%= erp_component('button/save', {
        text: t('submit')
    }) %>
    <%= erp_component('button/cancel', {
        text: t('cancel'),
        href: erp_payments.backend_payment_records_path
    }) %>
<% end %>