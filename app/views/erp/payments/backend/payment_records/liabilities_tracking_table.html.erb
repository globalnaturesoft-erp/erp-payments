<div class="custom-show text-center">
    <h4 class="font-blue-madison bold uppercase no-margin">
        Công nợ khách hàng <br>
        <span class="font-sm">
            <% if @period_name.nil? %>
                (<%= 'Từ ' + @from.strftime('%d/%m/%Y') if !@from.nil? %><%= !@to.nil? ? ' Đến ' + @to.strftime('%d/%m/%Y') : ' đến nay' %>)
            <% else %>
                (<%= @period_name %>)
            <% end %>
        </span>
    </h4>
</div>

<div class="portlet m-grid m-grid-demo">
    <div class="m-grid-row">
        <div class="m-grid-col m-grid-col-middle m-grid-col-center">
            <%= t('.total_begin_of_period_amount') %><br>
            <strong><%= format_price(@full_customers.sales_debt_amount(to_date: (@from - 1.day))) %></strong>
        </div>
        <div class="m-grid-col m-grid-col-middle m-grid-col-center">
            <%= t('.total_period_amount') %><br>
            <strong><%= format_price(@full_customers.sales_total_amount(from_date: @from, to_date: @to)) %></strong>
        </div>
        <div class="m-grid-col m-grid-col-middle m-grid-col-center">
            <%= t('.total_paid_amount') %><br>
            <strong><%= format_price(@full_customers.sales_paid_amount(from_date: @from, to_date: @to)) %></strong>
        </div>
        <div class="m-grid-col m-grid-col-middle m-grid-col-center">
            <%= t('.total_end_of_period_amount') %><br>
            <strong><%= format_price(@full_customers.sales_debt_amount(to_date: @to)) %></strong>
        </div>
    </div>
</div>

<div class="text-right mb-20">
    <%= actions = []
    actions << {
        text: 'Danh sách công nợ',
        url: erp_payments.liabilities_tracking_table_xlsx_backend_payment_records_path(params.to_unsafe_hash.merge({format: 'xlsx'})),
        target: "_blank",
    }
    actions << {
        text: 'Chi tiết công nợ (*.zip)',
        url: erp_payments.export_xlsx_all_details_backend_payment_records_path(params.to_unsafe_hash.merge({format: 'xlsx'})),
        target: "_blank",
        class: 'with-checkboxes-link',
        data_checkboxes: 'sales_discount_col|BH: Giảm giá|checked,sales_total_without_tax_col|BH: Thành tiền|checked,sales_tax_col|BH: Tiền thuế|checked,sales_total_col|BH: Tổng cộng|checked,return_discount_col|HK: Giảm giá|checked,return_total_without_tax_col|HK: Thành tiền|checked,return_tax_col|HK: Tiền thuế|checked,return_total_col|HK: Tổng cộng|checked,doctor_col|Bác sĩ|checked,patient_col|Bệnh nhân|checked,patient_state_col|Trạng thái bệnh nhân|checked,product_state_col|Tình trạng sản phẩm|checked,warehouse_col|Kho xuất/nhập',
        data_checkboxes_desc: 'Chọn cột muốn thêm vào chi tiết',
    }
    erp_component('button/actions', {
        actions: actions,
        text: 'Xuất excel',
        class: 'btn-primary',
        icon: 'fa fa-file-excel-o'
    }) %>
</div>

<table class="table table-advance table-hover table-striped order-column">
    <thead>
        <tr>
            <th width='1%'>
                <%= erp_datalist_check_all %>
            </th>
            <% if get_columns(params).include?("customer_code") %>
                <th>
                    <%= t('.customer_code') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("customer") %>
                <th>
                    <%= t('.customer') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("begin_of_period_amount") %>
                <th class="text-right">
                    <%= t('.begin_of_period_amount') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("period_amount") %>
                <th class="text-right">
                    <%= t('.period_amount') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("paid_amount") %>
                <th class="text-right">
                    <%= t('.paid_amount') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("end_of_period_amount") %>
                <th class="text-right">
                    <%= t('.end_of_period_amount') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("salesperson") %>
                <th class="text-left">
                    <%= t('.salesperson') %>
                </th>
            <% end %>
            <th width="7%"><%= t('actions') %></th>
        </tr>
    </thead>
    <tbody>
        <% @customers.each do |customer| %>  <!-- todo update this function -->
            <%
                begin_of_period_amount = customer.sales_debt_amount(to_date: (@from - 1.day))
                period_amount = customer.sales_total_amount(from_date: @from, to_date: @to)
                paid_amount = customer.sales_paid_amount(from_date: @from, to_date: @to)
                end_of_period_amount = customer.sales_debt_amount(to_date: @to)
            %>
            <tr class="odd gradeX has-child-table"
                data-url="<%= erp_payments.liabilities_tracking_table_details_backend_payment_records_path(
                    customer_id: customer.id,
                    from_date: @from,
                    to_date: @to,
                ) %>">
                <td>
                    <%= erp_datalist_check_row(id: customer.id) %>
                </td>
                <% if get_columns(params).include?("customer_code") %>
                    <td>
                        <i class="fa fa-plus expand tr-expand-button"></i>
                        <strong><%= contact_link(customer, customer.code) %></strong>
                    </td>
                <% end %>
                <% if get_columns(params).include?("customer") %>
                    <td>
                        <strong><%= contact_link(customer) %></strong>
                    </td>
                <% end %>
                <% if get_columns(params).include?("begin_of_period_amount") %>
                    <td class="text-right"><%= format_price(begin_of_period_amount) %></td>
                <% end %>
                <% if get_columns(params).include?("period_amount") %>
                    <td class="text-right"><%= format_price(period_amount) %></td>
                <% end %>
                <% if get_columns(params).include?("paid_amount") %>
                    <td class="text-right"><%= format_price(paid_amount) %></td>
                <% end %>
                <% if get_columns(params).include?("end_of_period_amount") %>
                    <td class="text-right"><%= format_price(end_of_period_amount) %>
                        <% customer_commission = customer.customer_commission_debt_amount %>
                        <% if customer_commission > 0 %>
                            <div class="text-small text-danger">(chiết khấu nợ: <%= format_price(customer_commission) %>)</div>
                        <% end %>
                    </td>
                <% end %>
                <% if get_columns(params).include?("salesperson") %>
                    <td class="text-left">
                        <%= customer.salesperson_name %>
                    </td>
                <% end %>
                <td>
                    <%=
                        actions = []
                        
                        actions << {
                            text: '<i class="fa fa-level-down"></i> '+t('.create_receive_for_contact'),
                            url: erp_payments.new_backend_payment_record_path(
                                pay_receive: Erp::Payments::PaymentRecord::TYPE_RECEIVE,
                                payment_type_id: Erp::Payments::PaymentType.find_by_code(Erp::Payments::PaymentType::CODE_CUSTOMER),
                                customer_id: customer.id
                            ),
                            class: 'modal-link has-form'
                        } if can? :accounting_payments_payment_records_create, nil
                        
                        actions << {
                            text: '<i class="fa fa-level-up"></i> '+t('.create_pay_for_contact'),
                            url: erp_payments.new_backend_payment_record_path(
                                pay_receive: Erp::Payments::PaymentRecord::TYPE_PAY,
                                payment_type_id: Erp::Payments::PaymentType.find_by_code(Erp::Payments::PaymentType::CODE_CUSTOMER),
                                customer_id: customer.id
                            ),
                            class: 'modal-link has-form'
                        } if can? :accounting_payments_payment_records_create, nil
                        top_acctions = actions
                        
                        actions << { divider: true } if !top_acctions.empty?
                        
                        actions << {
                            text: '<i class="fa fa-file-excel-o"></i> Xuất chi tiết công nợ (excel)',
                            url: erp_payments.xlsx_export_liabilities_backend_payment_records_path(
                                customer_id: customer.id,
                                from_date: @from,
                                to_date: @to,
                                format: 'xlsx',
                            ),
                            target: '_blank',
                            class: 'with-checkboxes-link',
                            #data_checkboxes: 'doctor_col|Bác sĩ|checked,patient_col|Bệnh nhân|checked,patient_state_col|Trạng thái bệnh nhân|checked,sales_discount_col|Bán hàng: Giảm giá|checked,sales_total_without_tax_col|Bán hàng: Thành tiền (trước thuế)|checked,sales_tax_col|Bán hàng: Thuế,sales_total_col|Bán hàng: Tổng cộng (sau thuế),return_amount_col|Trả hàng: Thành tiền (Số lượng x Đơn giá),return_discount_col|Trả hàng: Giảm giá|checked,return_total_col|Trả hàng: Tổng cộng|checked,product_state_col|Tình trạng sản phẩm|checked,warehouse_col|Kho xuất/nhập',
                            data_checkboxes: 'sales_discount_col|BH: Giảm giá|checked,sales_total_without_tax_col|BH: Thành tiền|checked,sales_tax_col|BH: Tiền thuế|checked,sales_total_col|BH: Tổng cộng|checked,return_discount_col|HK: Giảm giá|checked,return_total_without_tax_col|HK: Thành tiền|checked,return_tax_col|HK: Tiền thuế|checked,return_total_col|HK: Tổng cộng|checked,doctor_col|Bác sĩ|checked,patient_col|Bệnh nhân|checked,patient_state_col|Trạng thái bệnh nhân|checked,product_state_col|Tình trạng sản phẩm|checked,warehouse_col|Kho xuất/nhập',
                            data_checkboxes_desc: 'Chọn cột thêm vào sổ chi tiết',
                        }
                            
                        erp_datalist_row_actions(actions)
                    %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<% if @customers.empty? %>
    <div class="datalist-empty-line"><%= t('no_matching_records_found') %></div>
<% end %>

<%= erp_datalist_pagination(@customers) %>
