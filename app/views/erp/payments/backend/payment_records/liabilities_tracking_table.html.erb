<div class="custom-show text-center">
    <h4 class="font-blue-madison bold uppercase no-margin">
        Công nợ khách hàng <br>
        <span class="font-sm">
            <% if @period_name.nil? %>
                (<%= 'Từ ' + @from.strftime('%d/%m/%Y') if !@from.nil? %><%= !@to.nil? ? ' Đến ' + @to.strftime('%d/%m/%Y') : ' đến nay' %>)
            <% else %>
                (<%= @period_name %>)
            <% end %>
        </span>
    </h4>
</div>

<div class="portlet m-grid m-grid-demo">
    <div class="m-grid-row">
        <div class="m-grid-col m-grid-col-middle m-grid-col-center">
            <%= t('.total_begin_of_period_amount') %><br>
            <strong><%= format_price(@full_customers.sales_debt_amount(to_date: (@from - 1.day))) %></strong>
        </div>
        <div class="m-grid-col m-grid-col-middle m-grid-col-center">
            <%= t('.total_period_amount') %><br>
            <strong><%= format_price(@full_customers.sales_total_amount(from_date: @from, to_date: @to)) %></strong>
        </div>
        <div class="m-grid-col m-grid-col-middle m-grid-col-center">
            <%= t('.total_paid_amount') %><br>
            <strong><%= format_price(@full_customers.sales_paid_amount(from_date: @from, to_date: @to)) %></strong>
        </div>
        <div class="m-grid-col m-grid-col-middle m-grid-col-center">
            <%= t('.total_end_of_period_amount') %><br>
            <strong><%= format_price(@full_customers.sales_debt_amount(to_date: @to)) %></strong>
        </div>
    </div>
</div>

<table class="table table-advance table-hover table-striped order-column">
    <thead>
        <tr>
            <th width='1%'>
                <%= erp_datalist_check_all %>
            </th>
            <% if get_columns(params).include?("customer") %>
                <th>
                    <%= t('.customer') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("begin_of_period_amount") %>
                <th>
                    <%= t('.begin_of_period_amount') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("period_amount") %>
                <th>
                    <%= t('.period_amount') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("paid_amount") %>
                <th>
                    <%= t('.paid_amount') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("end_of_period_amount") %>
                <th>
                    <%= t('.end_of_period_amount') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("salesperson") %>
                <th>
                    <%= t('.salesperson') %>
                </th>
            <% end %>
            <th width="7%"><%= t('actions') %></th>
        </tr>
    </thead>
    <tbody>
        <% @customers.each do |customer| %>  <!-- todo update this function -->
            <tr class="odd gradeX has-child-table"
                data-url="<%= erp_payments.liabilities_tracking_table_details_backend_payment_records_path(
                    customer_id: customer.id,
                    from_date: @from,
                    to_date: @to,
                ) %>">
                <td>
                    <%= erp_datalist_check_row(id: customer.id) %>
                </td>
                <% if get_columns(params).include?("customer") %>
                    <td>
                        <i class="fa fa-plus expand tr-expand-button"></i>
                        <strong><%= contact_link(customer) %></strong>
                    </td>
                <% end %>
                <% if get_columns(params).include?("begin_of_period_amount") %>
                    <td><%= format_price(customer.sales_debt_amount(to_date: (@from - 1.day))) %></td>
                <% end %>
                <% if get_columns(params).include?("period_amount") %>
                    <td><%= format_price(customer.sales_total_amount(from_date: @from, to_date: @to)) %></td>
                <% end %>
                <% if get_columns(params).include?("paid_amount") %>
                    <td><%= format_price(customer.sales_paid_amount(from_date: @from, to_date: @to)) %></td>
                <% end %>
                <% if get_columns(params).include?("end_of_period_amount") %>
                    <td><%= format_price(customer.sales_debt_amount(to_date: @to)) %>
                        <% customer_commission = customer.customer_commission_debt_amount %>
                        <% if customer_commission > 0 %>
                            <div class="text-small text-danger">(chiết khấu nợ: <%= format_price(customer_commission) %>)</div>
                        <% end %>
                    </td>
                <% end %>
                <% if get_columns(params).include?("salesperson") %>
                    <td>
                        <%= customer.salesperson_name %>
                    </td>
                <% end %>
                <td>
                    <%= erp_datalist_row_actions(
                        [
                            {
                                text: '<i class="fa fa-angle-double-left"></i> '+t('.create_receive_for_contact'),
                                url: erp_payments.new_backend_payment_record_path(
                                    pay_receive: Erp::Payments::PaymentRecord::TYPE_RECEIVE,
                                    payment_type_id: Erp::Payments::PaymentType.find_by_code(Erp::Payments::PaymentType::CODE_CUSTOMER),
                                    customer_id: customer.id
                                )
                            },
                            {
                                text: '<i class="fa fa-angle-double-right"></i> '+t('.create_pay_for_contact'),
                                url: erp_payments.new_backend_payment_record_path(
                                    pay_receive: Erp::Payments::PaymentRecord::TYPE_PAY,
                                    payment_type_id: Erp::Payments::PaymentType.find_by_code(Erp::Payments::PaymentType::CODE_CUSTOMER),
                                    customer_id: customer.id
                                )
                            },
                            {divider: true},
                            {
                                text: '<i class="fa fa-file-excel-o"></i> Xuất bảng công nợ',
                                url: erp_payments.xlsx_export_liabilities_backend_payment_records_path(
                                    customer_id: customer.id,
                                    from_date: @from,
                                    to_date: @to,
                                    format: 'xlsx',
                                ),
                                target: '_blank',
                            },
                        ]
                    ) %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<% if @customers.empty? %>
    <div class="datalist-empty-line"><%= t('.no_matching_records_found') %></div>
<% end %>

<%= erp_datalist_pagination(@customers) %>
