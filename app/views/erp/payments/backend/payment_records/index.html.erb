<% content_for :title do %>
    <%= t('.payment_records') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-credit-card"></i> <%= t('.payment_records') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create_sale_customer'),
        href: erp_payments.new_backend_payment_record_path(order_id: Erp::Sales::Order.first, payment_type: Erp::Payments::PaymentRecord::PAYMENT_TYPE_RECEIVE),
        class: 'btn-sm'
    }) %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create_purchase_customer'),
        href: erp_payments.new_backend_payment_record_path(order_id: Erp::Sales::Order.first, payment_type: Erp::Payments::PaymentRecord::PAYMENT_TYPE_PAY),
        class: 'btn-sm'
    }) %>
<% end %>

