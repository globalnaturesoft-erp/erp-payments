<% content_for :title do %>
    <%= @payment_record.code %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_payments.backend_payment_records_path %>">
        <i class="icon-credit-card"></i> <%= t('.payment_records') %>
    </a> / <%= @payment_record.code %> / <%= t('.show') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/edit', {
        text: t('.edit'),
        href: erp_payments.edit_backend_payment_record_path(@payment_record, order_id: Erp::Orders::Order.first, payment_type: @payment_record.payment_type)
    }) %>
    <%= erp_component('button/actions', {
        actions:
        [
            {
                text: '<i class="fa fa-check"></i> '+t('confirm'),
                url: erp_payments.confirm_backend_payment_records_path(id: @payment_record),
                data_method: 'PUT',
                hide: !@payment_record.done?,
                class: 'ajax-link',
                data_confirm: t('.confirm_confirm')
            },
            {divider: true},
            {
                text: '<i class="glyphicon glyphicon-trash"></i> '+t('.delete'),
                href: erp_payments.backend_payment_record_path(@payment_record),
                data_method: 'DELETE',
                data_confirm: t('delete_confirm'),
                class: 'link-method'
            }
        ],
        text: t('actions'),
        class: 'btn-noborder'
    }) %>
<% end %>

<% content_for :page_toolbar do %>
    <div class="btn-group">
        <div class="clearfix">
        </div>
    </div>
<% end %>

