<%= form_for([erp_payments, :backend, payment_record]) do |f| %>
    <div class="form-body">
        <div class="row">
            <div class="col-md-12">
                <div class="custom-show text-center">
                    <h4 class="font-yellow bold uppercase">
                        <% if Erp::Core.available?("ortho_k") %>
                            <% if @payment_record.account == Erp::Payments::PaymentRecord.get_account_for_debt %>
                                Cấu hình <%= t('.customer_liability') %>
                            <% else %>
                                <%= t("#{payment_record.pay_receive}") %>
                                <%= t('.customer_liability') %>
                            <% end %>
                        <% else %>
                            <%= t("#{payment_record.pay_receive}") %>
                            <%= t('.customer_liability') %>
                        <% end %>
                    </h4>
                </div>
            </div>
            <div class="col-md-12">
                <div class="portlet light bordered">
                    <div class="portlet-body form">
                        <div class="row">
                            <div class="col-md-6">
                                <% if Erp::Core.available?("contacts") %>
                                    <%= erp_form_control("dataselect", {
                                        name: 'payment_record[customer_id]',
                                        value: payment_record.customer_id,
                                        text: payment_record.customer_name,
                                        placeholder: t('.choose_customer'),
                                        help: t('.help_customer'),
                                        label: t('.customer'),
                                        url: erp_contacts.dataselect_backend_contacts_path(format: 'json', is_customer: true),
                                        required: true,
                                        errors: payment_record.errors.full_messages_for(:customer_id)
                                    }) %>
                                <% end %>
                                <div class="ajax-box"
                                    data-url="<%= erp_payments.ajax_employee_field_backend_payment_records_path(employee_id: payment_record.employee_id, type: 'contact') %>"
                                    data-control="[name='payment_record[customer_id]']">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="ajax-box"
                                    data-url="<%= erp_payments.ajax_info_form_for_customer_backend_payment_records_path %>"
                                    data-control="[name='payment_record[customer_id]']">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <%= render 'form_genaral', payment_record: payment_record %>
            </div>
        </div>
    </div>
    <%= erp_component('button/save', {
        text: t('submit')
    }) %>
    <input type="submit" name="save_print" value="LƯU & IN PHIẾU" class="btn green-seagreen" />
    <%= erp_component('button/cancel', {
        text: t('cancel'),
        href: erp_payments.backend_payment_records_path
    }) %>
<% end %>
