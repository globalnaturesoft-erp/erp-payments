<div class="tabbable-custom ">
    <ul class="nav nav-tabs ">
        <li class="active">
            <a href="#tab_5_1" data-toggle="tab">
                <i class="glyphicon glyphicon-list-alt"></i>
                <%= t('.orders_list') %>
            </a>
        </li>
        
        <li>
            <a href="#tab_5_2" data-toggle="tab">
                <i class="icon-users"></i>
                <%= t('.contacts_list') %>
            </a>
        </li>
        
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="tab_5_1">
            <div class="table-scrollable">
                <table class="table table-bordered table-advance order-column">
                    <thead class="flip-content">
                        <tr>
                            <th width="12%" class="text-left bg-yellow bg-font-yellow text-nowrap">Mã hóa đơn</th>
                            <th class="bg-yellow bg-font-yellow text-nowrap">Ngày chứng từ</th>
                            <th class="bg-yellow bg-font-yellow text-nowrap">Tổng cộng</th>
                            <th class="bg-yellow bg-font-yellow text-nowrap">Số tiền đã thu</th>
                            <th class="bg-yellow bg-font-yellow text-nowrap">Số tiền còn lại</th>
                            <th class="bg-yellow bg-font-yellow text-nowrap text-right">Hoa hồng (%)</th>
                            <th class="bg-yellow bg-font-yellow text-nowrap text-right">Tiền chi hoa hồng</th>
                            <th class="bg-yellow bg-font-yellow text-nowrap text-right">Ghi chú</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="bg-green" colspan="2"><strong> Tổng cộng </strong></td>
                            <td class="bg-green text-right"><strong><%= format_price(@orders.sum(&:total)) %></strong></td> <!-- @todo sum total for orders -->
                            <td class="bg-green text-right"><strong><%= format_price(10000000) %></strong></td>
                            <td class="bg-green text-right"><strong><%= format_price(10000000) %></strong></td>
                            <td class="bg-green text-right"><strong></strong></td>
                            <td class="bg-green text-right"><strong><%= format_price(10000) %></strong></td>
                            <td class="bg-green text-right"><strong></strong></td>
                        </tr>
                        <% @orders.each do |order| %>
                            <tr>
                                <td class="text-left"><strong><%= link_to order.code, 'javascript:;' %></strong></td> <!-- @todo modal link_to for order details -->
                                <td class="text-right"><%= format_date(order.order_date) %></td>
                                <td class="text-right"><%= format_price(order.cache_total) %></td>
                                <td class="text-right"><%= format_price(10000000) %></td>
                                <td class="text-right"><%= format_price(10000000) %></td>
                                <td class="text-right">0.5%</td>
                                <td class="text-right"><%= format_price(10000) %></td>
                                <td class="text-right"></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="tab-pane" id="tab_5_2">
            <div class="table-scrollable">
                <table class="table table-bordered table-advance order-column">
                    <thead class="flip-content">
                        <tr>
                            <th width="20%" class="bg-yellow bg-font-yellow text-nowrap text-left">Tên khách hàng</th>
                            <th width="10%" class="bg-yellow bg-font-yellow text-nowrap text-right">Số tiền thu</th>
                            <th width="10%" class="bg-yellow bg-font-yellow text-nowrap text-right">Hoa hồng (%)</th>
                            <th width="10%" class="bg-yellow bg-font-yellow text-nowrap text-right">Tiền chi hoa hồng</th>
                            <th width="10%" class="bg-yellow bg-font-yellow text-nowrap text-right">Ghi chú</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="bg-green"><strong></strong></td>
                            <td class="bg-green text-right"><strong><%= format_price(1000000000) %></strong></td> <!-- @todo sum amount for payment records -->
                            <td class="bg-green text-right"><strong></strong></td>
                            <td class="bg-green text-right"><strong><%= format_price(1000000) %></strong></td>
                            <td class="bg-green text-right"><strong></strong></td>
                        </tr>
                        <% @contacts.each do |contact| %>
                            <tr>
                                <td class="text-left"><strong><%= link_to contact.name, 'javascript:;' %></strong></td>
                                <td class="text-right"><%= format_price(rand(1000000..1000000000)) %></td>
                                <td class="text-right"><%= rand(0.1..0.5).round(1) %>%</td>
                                <td class="text-right"><%= format_price(rand(1000000..1000000000)) %></td>
                                <td class="text-right"></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div