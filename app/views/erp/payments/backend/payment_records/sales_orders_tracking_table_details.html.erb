<% uid = unique_id %>
<div class="tabbable-custom ">
    <ul class="nav nav-tabs ">
        <li class="active">
            <a href="#tab_<%= uid %>_1" data-toggle="tab">
                <i class="icon-clock"></i>
                <%= t('.payment_records_list') %>
            </a>
        </li>
        <li>
            <a href="#tab_<%= uid %>_2" data-toggle="tab">
                <i class="icon-basket"></i>
                <%= t('.sales_export_list') %>
            </a>
        </li>
        <li>
            <a href="#tab_<%= uid %>_3" data-toggle="tab">
                <i class="icon-action-undo"></i>
                <%= t('.sales_import_list') %>
            </a>
        </li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="tab_<%= uid %>_1">
            <%= erp_datalist(url: erp_payments.sales_orders_tracking_payment_records_list_backend_payment_records_path(
                    customer_id: params[:customer_id],
                    from_date: params[:from_date],
                    to_date: params[:to_date],
                )
            ) %>
        </div>
        <div class="tab-pane" id="tab_<%= uid %>_2">
            <%= erp_datalist(url: erp_payments.sales_orders_tracking_sales_export_list_backend_payment_records_path(
                    customer_id: params[:customer_id],
                    from_date: params[:from_date],
                    to_date: params[:to_date],
                )
            ) %>
        </div>
        <div class="tab-pane" id="tab_<%= uid %>_3">
            <%= erp_datalist(url: erp_payments.sales_orders_tracking_sales_import_list_backend_payment_records_path(
                    customer_id: params[:customer_id],
                    from_date: params[:from_date],
                    to_date: params[:to_date],
                )
            ) %>
        </div>
    </div>
</div
