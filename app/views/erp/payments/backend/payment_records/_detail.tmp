

<br/>



<div class="invoice-content-2 bordered">
    <div class="row invoice-head">
        <div class="col-md-7 col-xs-6">
            <div class="invoice-logo">
                <img src="http://globalnaturesoft.com/frontend/assets/images/logo_main.png" style="height: 70px" />
                <h1 class="uppercase head">
                    <%= payment_record.pay_receive == Erp::Payments::PaymentRecord::TYPE_RECEIVE ? t('.receipt_voucher') : t('.payment_voucher') %><br/>
                    <span><%= t('.number') %>: <%= payment_record.code %></span></h1>
            </div>
        </div>
        <div class="col-md-5 col-xs-6">
            <div class="company-address">
                <span class="bold uppercase">CÔNG TY TNHH GP CNTT & TT HOÀNG KHANG</span>
                <br/> 188, Đường số 1, Phường 16, Quận Gò Vấp
                <br/> TP. Hồ Chí Minh, Việt Nam
                <br/>
                <span class="bold">Điện thoại: </span> 1800 123 456
                <br/>
                <span class="bold">Email: </span> support@globalnaturesoft.com
                <br/>
                <span class="bold">Website: </span> www.globalnaturesoft.com
                <br/>
            </div>
        </div>
    </div>
    <div class="row invoice-content">
        <div class="col-xs-7">
            <h2 class="invoice-title title"><%= payment_record.pay_receive == Erp::Payments::PaymentRecord::TYPE_RECEIVE ? t('.payer') : t('.receiver') %>:
            <strong><%= payment_record.contact_name %></strong></h2>
        </div>
        
        <div class="col-xs-5">
            <h2 class="invoice-title title"><%= t('.phone') %>:
            <strong><%= payment_record.contact_phone %></strong></h2>
        </div>
        
        <div class="col-xs-12">
            <h2 class="invoice-title title"><%= t('.address') %>:
            <strong><%= payment_record.contact_address %></strong></h2>
        </div>
        <div class="col-xs-12">
            <h2 class="invoice-title title"><%= payment_record.pay_receive == Erp::Payments::PaymentRecord::TYPE_RECEIVE ? t('.receive_description') : t('.pay_description') %>:
            <%= payment_record.description %></h2>
        </div>
        <div class="col-xs-4">
            <h2 class="invoice-title title"><%= t('.total_amount') %>:
            <strong><%= payment_record.amount %></strong></h2>
        </div>
        <div class="col-xs-8">
            <h2 class="invoice-title title"><%= t('.in_words') %>:
            <strong><%= docso(payment_record.amount) %></strong></h2>
        </div>
        <div class="col-xs-4">
            <h2 class="invoice-title title"><%= t('.attached_business_documents') %>:
            <strong>@TODO</strong></h2>
        </div>
        <% if !payment_record.order_id.nil? %>
            <div class="col-xs-4">
                <h2 class="invoice-title title"><%= t('.order_date') %>:
                <strong><%= format_date(payment_record.order_date(params)) %></strong></h2>
            </div>
            <div class="col-xs-4">
                <h2 class="invoice-title title"><%= t('.payment_deadline') %>:
                <strong><%= format_date(payment_record.payment_deadline(params)) %></strong></h2>
            </div>
        <% end %>
    </div>
    
    <div class="row date">
        <div class="col-xs-12">
            <h2 class="invoice-title title">
            <%= t('.dd') %> <i>...</i> <%= t('.mm') %> <i>...</i> <%= t('.yyyy') %> <i>...</i></h2>
        </div>
    </div>
    
    <div class="row sign">
        <div class="col-xs-3 center">
            <h2 class="invoice-title sign title"><%= t('.prepared_by') %></h2>
            <span class="inv-sign"><%= t('.sign_name') %></span>
            <p class="invoice-desc"><%= payment_record.creator_name %></p>
        </div>
        <div class="col-xs-3 center">
            <h2 class="invoice-title sign title"><%= payment_record.pay_receive == Erp::Payments::PaymentRecord::TYPE_RECEIVE ? t('.payer') : t('.receiver') %></h2>
            <span class="inv-sign"><%= t('.sign_name') %></span>
            <p class="invoice-desc"><%= payment_record.contact_name %></p>
        </div>
        <div class="col-xs-3 center">
            <h2 class="invoice-title sign title"><%= t('.chief_accountant_cashier') %></h2>
            <span class="inv-sign"><%= t('.sign_name') %></span>
            <p class="invoice-desc"><%= payment_record.accountant_name %></p>
        </div>
        <div class="col-xs-3 center">
            <h2 class="invoice-title sign title"><%= t('.director') %></h2>
            <span class="inv-sign"><%= t('.sign_name_seal') %></span>
            <p class="invoice-desc">@TODO </p>
        </div>
    </div>
</div>