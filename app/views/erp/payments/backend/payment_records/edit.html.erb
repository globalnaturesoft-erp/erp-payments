<% content_for :title do %>
    <%= @payment_record.code %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_payments.backend_payment_records_path %>">
    <i class="fa fa-usd"></i> <%= t('.payment_records') %>
    </a> / <%= @payment_record.code %>
<% end %>

<% content_for :page_toolbar do %>
    <% if can? :change_payment_type, @payment_record %>
        <%= erp_component('button/custom', {
            text: 'Chuyển loại phiếu',
            href: erp_payments.change_payment_type_backend_payment_records_path(id: @payment_record),
            icon: 'fa fa-exchange'
        }) %>
    <% end %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <% if @payment_record.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <%= render 'form_' + @payment_record.payment_type.code, payment_record: @payment_record %>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>