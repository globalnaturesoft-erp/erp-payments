<% content_for :title do %>
    <%= @payment_record.code %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_payments.backend_payment_records_path %>">
    <i class="fa fa-usd"></i> <%= t('.payment_records') %>
    </a> / <%= @payment_record.code %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_payments.new_backend_payment_record_path,
        class: 'btn-sm'
    }) %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <% if @payment_record.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
            <%= render 'form', payment_record: @payment_record %>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>