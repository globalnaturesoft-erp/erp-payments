<%= form_for([erp_payments, :backend, payment_record]) do |f| %>
    <div class="form-body">
        <div class="row mb-10">
            <div class="col-md-12">
                <div class="custom-show text-center">
                    <h4 class="font-green-meadow bold uppercase">
                        <%= t("#{payment_record.pay_receive}") %>
                        <%= t('.product_return') %>
                    </h4>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="portlet light bordered">
                    <div class="portlet-body form">
                        <div class="row">
                            <div class="col-md-6">
                                <% if Erp::Core.available?("qdeliveries") %>
                                    <%= erp_form_control("dataselect", {
                                        name: 'payment_record[delivery_id]',
                                        value: payment_record.delivery_id,
                                        text: payment_record.delivery_code,
                                        placeholder: t('.choose_delivery'),
                                        label: t('.delivery'),
                                        url: erp_qdeliveries.dataselect_backend_deliveries_path(format: 'json',
                                            status: Erp::Qdeliveries::Delivery::STATUS_DELIVERED,
                                            delivery_type: Erp::Qdeliveries::Delivery::TYPE_SALES_IMPORT
                                        ),
                                        required: true,
                                        errors: payment_record.errors.full_messages_for(:delivery_id)
                                    }) %>
                                <% end %>
                            </div>
                            <div class="col-md-6">
                                <div class="ajax-box"
                                    data-url="<%= erp_payments.ajax_info_form_for_delivery_backend_payment_records_path %>"
                                    data-control="[name='payment_record[delivery_id]']">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <%= render 'form_genaral', payment_record: payment_record %>
            </div>
        </div>
    </div>
    <%= erp_component('button/save', {
        text: t('submit')
    }) %>
    <input type="submit" name="save_print" value="LƯU & IN PHIẾU" class="btn green-seagreen" />
    <%= erp_component('button/cancel', {
        text: t('cancel'),
        href: erp_payments.backend_payment_records_path
    }) %>
<% end %>
